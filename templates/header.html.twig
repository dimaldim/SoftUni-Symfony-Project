<header>
    <notifications group="app" position="top center"></notifications>
    <div id="top-header">
        <div class="container">
            <ul class="header-links pull-left">
                <li><a href="#"><i class="fa fa-phone"></i> +359-000-000-000</a></li>
                <li><a href="#"><i class="fa fa-envelope-o"></i> contact@myemail.com</a></li>
                <li><a href="#"><i class="fa fa-map-marker"></i> Address</a></li>
            </ul>
            <ul class="header-links pull-right">
                {% if app.user %}
                    {% if app.user.isAdmin() %}
                        <li><a href="{{ path('easyadmin') }}"><i class="fa fa-user"></i> Admin panel</a></li>
                    {% endif %}
                    {#                    <li><a href="#"><i class="fa fa-user-o"></i> My Account</a></li>#}
                    <li><a href="{{ path('app_logout') }}"><i class="fa fa-sign-out"></i> Logout</a></li>
                {% else %}
                    <li><a href="{{ path('app_login') }}"><i class="fa fa-sign-in"></i> Login</a></li>
                    <li><a href="{{ path('app_register') }}"><i class="fa fa-user"></i> Register</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
    <div id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="header-logo">
                        <a href="{{ path('homepage') }}" class="logo">
                            <h2 style="color: #FFFFFF;">MD Shop</h2>
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="header-search">
                        <form method="post" action="{{ path('search') }}">
                            <input class="input" name="keyword" placeholder="Search here">
                            <button class="search-btn">Search</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <div>
                            <a href="#">
                                <i class="fa fa-heart-o"></i>
                                <span>Your Wishlist</span>
                                <div class="qty">0</div>
                            </a>
                        </div>
                        <cart :cart="cart" v-on:removefromcart="removeItem"></cart> <!-- vueJS component !-->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
